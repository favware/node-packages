{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf packages/**/dist packages/**/node_modules",
    "test": "jest",
    "lint": "eslint packages --fix --ext js,jsx,ts,tsx",
    "format": "prettier --write --loglevel=warn packages/**/*.{js,ts,md,json}",
    "build": "lerna run build --parallel",
    "docs": "typedoc",
    "commit": "git-cz",
    "cz": "git-cz",
    "update": "yarn upgrade-interactive --latest",
    "prepare": "husky install .github/husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@sapphire/eslint-config": "^3.1.3",
    "@sapphire/prettier-config": "^1.1.2",
    "@sapphire/ts-config": "^2.2.2",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.0",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "jest-circus": "^27.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.49.0",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.0.0",
    "typedoc": "0.19.2",
    "typedoc-plugin-lerna-packages": "^0.3.1",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^4.2.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "acorn": "^8.2.4",
    "minimist": "^1.2.5",
    "kind-of": "^6.0.3",
    "dot-prop": "^6.0.1",
    "marked": "^2.0.5"
  }
}
