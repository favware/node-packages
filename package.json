{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf packages/**/dist packages/**/node_modules",
    "test": "jest",
    "lint": "eslint packages --fix --ext js,jsx,ts,tsx",
    "format": "prettier --write --loglevel=warn packages/**/*.{js,ts,md,json}",
    "build": "lerna run build --parallel",
    "docs": "typedoc",
    "commit": "git-cz",
    "cz": "git-cz",
    "update": "yarn upgrade-interactive --latest",
    "prepare": "husky install .github/husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@sapphire/eslint-config": "^3.2.1",
    "@sapphire/prettier-config": "^1.1.6",
    "@sapphire/ts-config": "^3.0.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.6",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "jest-circus": "^27.2.4",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.57.0",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typedoc": "^0.22.4",
    "typescript": "^4.4.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "acorn": "^8.5.0",
    "minimist": "^1.2.5",
    "kind-of": "^6.0.3",
    "dot-prop": "^6.0.1",
    "marked": "^3.0.4",
    "tar": "^6.1.11",
    "trim-newlines": "^4.0.2"
  }
}
