{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint scripts/ packages/** --fix --ext ts",
    "test": "jest",
    "build": "lerna run build --parallel",
    "docs": "typedoc",
    "prepublishOnly": "yarn build",
    "commit": "git-cz",
    "cz": "git-cz",
    "up": "yarn upgrade-interactive",
    "docs:serve": "concurrently \"serve docs\" \"open-cli http://localhost:5000\"",
    "scripts:runner": "ts-node -P tsconfig.eslint.json",
    "scripts:validateNoOnly": "yarn scripts:runner scripts/validateNoOnly",
    "scripts:duplicateESLintConfig": "yarn scripts:runner scripts/duplicateESLintConfig",
    "ci:test": "jest --collectCoverage --max-workers 2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/common-tags": "^1.8.0",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.22",
    "@types/js-yaml": "^3.12.1",
    "@types/jsonfile": "^5.0.0",
    "@types/node": "^12.12.7",
    "@types/node-fetch": "^2.5.3",
    "@types/rollup-plugin-progress": "^1.1.0",
    "@types/through": "^0.0.29",
    "chalk": "^2.4.2",
    "common-tags": "^1.8.0",
    "concurrently": "^5.0.0",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.6.0",
    "glob": "^7.1.6",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "jsonfile": "^5.0.0",
    "lerna": "^3.18.4",
    "lint-staged": "^9.4.2",
    "open-cli": "^5.0.0",
    "prism-media": "github:CatsMiaow/prism-media#master",
    "rollup": "^1.26.3",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript2": "^0.25.2",
    "serve": "^11.2.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.1",
    "typedoc": "^0.15.0",
    "typedoc-plugin-lerna-packages": "^0.2.1",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^3.7.2",
    "ytdl-core": "^1.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn scripts:validateNoOnly && yarn lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint",
      "git add"
    ],
    "packages/eslint-config/src/index.ts": [
      "yarn scripts:duplicateESLintConfig",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {}
}
