{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "lerna run lint --parallel",
    "test": "jest",
    "build": "lerna run build --parallel --ignore @favware/speedtest",
    "predocs": "lerna run docs:clean --parallel && lerna run docs:build --parallel",
    "docs": "lerna run docs --parallel",
    "postdocs": "rimraf packages/**/docsbuild",
    "prepublishOnly": "yarn build && yarn docs",
    "commit": "git-cz",
    "cz": "git-cz",
    "scripts:validateNoOnly": "babel-node scripts/validateNoOnly --extensions \".ts\"",
    "ci:lint": "lerna run lint --ignore @favware/speedtest",
    "ci:test": "jest --collectCoverage --max-workers 2"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.5.5",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/common-tags": "^1.8.0",
    "@types/find": "^0.2.1",
    "@types/gulp-rename": "^0.0.33",
    "@types/gulp": "^4.0.6",
    "@types/jest": "^24.0.17",
    "@types/js-yaml": "^3.12.1",
    "@types/node-fetch": "^2.5.0",
    "@types/node": "^12.7.2",
    "@types/rollup-plugin-progress": "^1.1.0",
    "@types/through": "^0.0.29",
    "chalk": "^2.4.2",
    "common-tags": "^1.8.0",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "^6.1.0",
    "find": "^0.3.0",
    "husky": "^3.0.4",
    "jest-circus": "^24.9.0",
    "jest": "^24.9.0",
    "jsdoc-to-markdown": "^5.0.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.3",
    "prism-media": "^1.0.2",
    "rimraf": "^3.0.0",
    "rollup": "^1.19.4",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-terser": "5.1.1",
    "rollup-plugin-typescript2": "^0.22.1",
    "standard-version": "^7.0.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "ytdl-core": "^0.29.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn scripts:validateNoOnly && yarn lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
