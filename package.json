{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf packages/**/dist packages/**/node_modules",
    "test": "jest",
    "lint": "eslint packages --fix --ext js,jsx,ts,tsx",
    "format": "prettier --write --loglevel=warn packages/**/*.{js,ts,md,json}",
    "build": "lerna run build --parallel",
    "docs": "typedoc",
    "commit": "git-cz",
    "cz": "git-cz",
    "update": "yarn upgrade-interactive --latest"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@sapphire/eslint-config": "^2.1.1",
    "@sapphire/prettier-config": "^1.0.6",
    "@sapphire/ts-config": "^2.0.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.2",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typedoc": "0.19.2",
    "typedoc-plugin-lerna-packages": "^0.3.1",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "acorn": "^8.0.5",
    "minimist": "^1.2.5",
    "kind-of": "^6.0.3",
    "dot-prop": "^6.0.1"
  }
}
