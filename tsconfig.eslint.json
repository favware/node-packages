{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": [
    "packages/**/*.mjs",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "scripts",
    "vitest.config.ts",
    "packages/**/__fixtures__/*.js",
    "packages/**/__tests__/*.js"
  ]
}
