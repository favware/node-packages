{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": [
    "packages/**/*.ts",
    "scripts",
    "packages/**/jest.config.js",
    "packages/**/__tests__/*.js",
    "packages/**/__fixtures__/*.js",
    "./jest.config.js"
  ]
}
