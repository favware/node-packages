{
  "name": "@favware/eslint-config-react-app",
  "version": "1.1.0",
  "description": "Standard ESLint config for Favware projects using React + TypeScript",
  "author": "@favware",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/favware/node-packages/tree/master/packages/eslint-config-react-app#readme",
  "scripts": {
    "test": "jest",
    "prelint": "yarn test && yarn build",
    "lint": "eslint src __tests__ --ext js,ts --fix -c dist/index.js",
    "build": "tsc -b src",
    "prepublishOnly": "yarn lint"
  },
  "dependencies": {
    "@favware/eslint-config": "latest",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.7"
  },
  "files": [
    "dist",
    "!dist/.tsbuildinfo"
  ],
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favware/node-packages.git",
    "directory": "packages/eslint-config-react-app"
  },
  "bugs": {
    "url": "https://github.com/favware/node-packages/issues"
  },
  "keywords": [
    "eslint-config",
    "react",
    "nextjs",
    "create-react-app",
    "favware",
    "typescript",
    "ts"
  ],
  "directories": {
    "lib": "src",
    "test": "__tests__"
  },
  "publishConfig": {
    "access": "public"
  }
}
