{
  "extends": "./packages/ts-config/tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "allowJs": false,
    "incremental": false
  },
  "include": ["packages/**/*.ts", "scripts"],
  "typedocOptions": {
    "out": "./docs/",
    "readme": "./README.md",
    "name": "Favware Node Packages",
    "exclude": ["**/node_modules/**", "**/*.test.ts", "**/*.js"],
    "mode": "modules",
    "pathExclude": ["scripts/duplicateESLintConfig", "scripts/validateNoOnly"],
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeNotExported": true
  }
}
